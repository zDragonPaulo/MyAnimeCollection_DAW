@model List<Anime>
@using Models
@{
    ViewData["Title"] = "Página Inicial";
    var userLists = ViewBag.UserLists as List<UserListModel>;
}

<!-- Main Page -->
<div class="container">
    <h1 class="my-4">Animes</h1>

    <!-- Button to show the filter -->
    <button class="btn btn-secondary mb-4" type="button" data-bs-toggle="collapse" data-bs-target="#filterForm"
        aria-expanded="false" aria-controls="filterForm">
        Filtro de Melhores Avaliações
    </button>

    <!-- Filter by date form -->
    <div class="collapse" id="filterForm">
        <form method="get" asp-action="Index" class="mb-4">
            <div class="row">
                <div class="col-md-4">
                    <label for="startDate">Data de Início</label>
                    <input type="date" id="startDate" name="startDate" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label for="endDate">Data de Fim</label>
                    <input type="date" id="endDate" name="endDate" class="form-control" />
                </div>
                <div class="col-md-4 d-flex align-items-end">
                    <button type="submit" class="btn btn-primary">Filtrar</button>
                </div>
            </div>
        </form>
    </div>

    <!-- List of animes -->
    <div class="row">
        @foreach (var anime in Model)
        {
            <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100 position-relative">
                    <a href="@Url.Action("Details", "Anime", new { id = anime.AnimeId })">
                        <img src="@anime.ImageURL" alt="@anime.Title" class="card-img-top fixed-image" />
                    </a>

                    <!-- Dropdown to add an anime to a list -->
                    <div class="card-body">
                        <h5 class="card-title d-flex justify-content-between align-items-center">
                            @anime.Title
                            <div class="dropdown">
                                <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton"
                                    data-bs-toggle="dropdown" aria-expanded="false">
                                    +
                                </button>
                                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                    @if (userLists != null && userLists.Any())
                                    {
                                        @foreach (var list in userLists)
                                        {
                                            <li>
                                                <a class="dropdown-item add-to-list" href="javascript:void(0);"
                                                    data-animeid="@anime.AnimeId" data-listid="@list.UserListId">
                                                    @list.Name
                                                </a>
                                            </li>
                                        }
                                    }
                                    else
                                    {
                                        <li>
                                            <span class="dropdown-item text-muted">Sem listas disponíveis</span>
                                        </li>
                                    }
                                    <li>
                                        <hr class="dropdown-divider" />
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                            href="@Url.Action("CreateUserList", "UserList", new { animeId = anime.AnimeId })">
                                            Criar Nova Lista
                                        </a>
                                    </li>
                                </ul>
                            </div>
                        </h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <!-- Script to add an anime to a list -->
    <script>
        $(document).ready(function () {
            $('.add-to-list').click(function (e) {
                e.preventDefault();

                var animeId = $(this).data('animeid');
                var listId = $(this).data('listid');

                $.ajax({
                    url: '@Url.Action("AddAnimeToList", "UserList")',
                    type: 'POST',
                    data: { animeId: animeId, listId: listId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);
                        } else {
                            alert(response.message);
                        }
                    },
                    error: function () {
                        alert('Ocorreu um erro ao adicionar o anime à lista.');
                    }
                });
            });
        });
    </script>
}
