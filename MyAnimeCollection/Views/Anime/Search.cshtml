@model List<Anime>

@{
    ViewData["Title"] = "Resultados da Pesquisa";
}

<div class="container">
    <h1 class="my-4">Resultados da Pesquisa - Animes</h1>
    <div class="row">
        @if (Model.Count == 0)
        {
            <p>Nenhum anime encontrado na sua pesquisa.</p>
        }
        else
        {
            @foreach (var anime in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 position-relative">
                        <a href="@Url.Action("Details", "Anime", new { id = anime.AnimeId })">
                            <img src="@anime.ImageURL" alt="@anime.Title" class="card-img-top fixed-image" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">@anime.Title</h5>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>