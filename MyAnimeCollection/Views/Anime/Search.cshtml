@model List<Anime>
@using Models
@{
    ViewData["Title"] = "Resultados da Pesquisa";
    var userLists = ViewBag.UserLists as List<UserListModel>;
}

<div class="container">
    <h1 class="my-4">Resultados da Pesquisa - Animes</h1>
    <div class="row">
        @if (Model.Count == 0)
        {
            <p>Nenhum anime encontrado na sua pesquisa.</p>
        }
        else
        {
            @foreach (var anime in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 position-relative">
                        <a href="@Url.Action("Details", "Anime", new { id = anime.AnimeId })">
                            <img src="@anime.ImageURL" alt="@anime.Title" class="card-img-top fixed-image" />
                        </a>
                        <div class="card-body">
                            <h5 class="card-title d-flex justify-content-between align-items-center">
                                @anime.Title
                                <div class="dropdown">
                                    <button class="btn btn-primary btn-sm dropdown-toggle" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false">
                                        +
                                    </button>
                                    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                        @if (userLists != null && userLists.Any())
                                        {
                                            @foreach (var list in userLists)
                                            {
                                                <li>
                                                    <a class="dropdown-item add-to-list" href="javascript:void(0);" data-animeid="@anime.AnimeId" data-listid="@list.UserListId">
                                                        @list.Name
                                                    </a>
                                                </li>
                                            }
                                        }
                                        else
                                        {
                                            <li>
                                                <span class="dropdown-item text-muted">Sem listas disponíveis</span>
                                            </li>
                                        }
                                        <li>
                                            <hr class="dropdown-divider" />
                                        </li>
                                        <li>
                                            <a class="dropdown-item" href="@Url.Action("CreateUserList", "UserList", new { animeId = anime.AnimeId })">
                                                Criar Nova Lista
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </h5>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            // Quando o link para adicionar anime for clicado
            $('.add-to-list').click(function (e) {
                e.preventDefault();

                var animeId = $(this).data('animeid');
                var listId = $(this).data('listid');

                // Faz a requisição AJAX
                $.ajax({
                    url: '@Url.Action("AddAnimeToList", "UserList")',
                    type: 'POST',  // Mudamos para POST porque é uma operação de modificação
                    data: { animeId: animeId, listId: listId },
                    success: function (response) {
                        if (response.success) {
                            alert(response.message);  // Exibe a mensagem de sucesso
                            // Opcionalmente, você pode atualizar a UI aqui
                        } else {
                            alert(response.message);  // Exibe a mensagem de erro
                        }
                    },
                    error: function () {
                        alert('Ocorreu um erro ao adicionar o anime à lista.');
                    }
                });
            });
        });
    </script>
}
