@model List<Models.UserModel>

@{
    ViewData["Title"] = "Resultados da Pesquisa - Utilizadores";
}

<!-- User Search Results -->
<div class="container">
    <h1 class="my-4">Resultados da Pesquisa - Utilizadores</h1>
    <div class="row">
        @if (Model.Count == 0)
        {
            <p>Nenhum utilizador encontrado na sua pesquisa.</p>
        }
        else
        {
            @foreach (var user in Model)
            {
                <div class="col-12 col-sm-6 col-md-4 col-lg-3 mb-4">
                    <div class="card h-100 position-relative">
                        <div class="card-body">
                            <h5 class="card-title">@user.Name</h5>
                            <p class="card-text">@user.Email</p>
                            <a href="@Url.Action("Profile", "User", new { id = user.UserId })" class="btn btn-primary">Ver Perfil</a>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>