@model Models.UserModel

@{
    ViewData["Title"] = Model?.Name ?? "Perfil do Utilizador";
}

<!-- User Details -->
<div class="container">
    <h1 class="my-4">Perfil do Utilizador</h1>
    @if (Model != null)
    {
        <div class="row align-items-center mb-4">
            <!-- User photo -->
            <div class="col-md-3 text-center">
                <img src="@Model.ImageUrl" class="img-fluid rounded-circle" alt="Imagem do Utilizador"
                    style="max-width: 150px;" />
            </div>

            <!-- User information -->
            <div class="col-md-9">
                <h2>@Model.Name</h2>
                <p><strong>Idade:</strong> @Model.Age</p>
                @if (!string.IsNullOrEmpty(Model.Biography))
                {
                    <p><strong>Biografia:</strong> @Model.Biography</p>
                }
            </div>
        </div>

        <!-- Anime Lists -->
        <div class="row">
            @if (ViewBag.UserLists is List<Models.UserListModel> userLists && userLists.Any())
            {
                <h3 class="mb-4">Listas de Anime</h3>
                @foreach (var list in userLists)
                {
                    <div class="mb-4">
                        <h4>
                            <a href="@Url.Action("Details", "UserList", new { id = ViewBag.UserId, id_lista = list.UserListId })">
                                @list.Name
                            </a>
                        </h4>

                        <!-- Average rating -->
                        @if (ViewBag.UserListRatings is Dictionary<int, double> userListRatings &&
                       userListRatings.ContainsKey(list.UserListId))
                        {
                            <div class="average-rating" style="font-size: 1.5rem; color: gold;">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    @(i <= Math.Round(userListRatings[list.UserListId]) ? "★" : "☆")
                                }
                                <span style="color: black;">(@userListRatings[list.UserListId].ToString("0.0") estrelas)</span>
                            </div>
                        }

                        <!-- Animes on the list -->
                        <div class="row">
                            @if (ViewBag.AnimesList is List<Anime> animesList)
                            {
                                @foreach (var animeId in list.AnimeIds)
                                {
                                    var anime = animesList.FirstOrDefault(a => a.AnimeId == animeId);
                                    if (anime != null)
                                    {
                                        <div class="col-md-3">
                                            <div class="card">
                                                <a href="@Url.Action("Details", "Anime", new { id = anime.AnimeId })">
                                                    <img src="@anime.ImageURL" class="card-img-top" alt="@anime.Title">
                                                </a>
                                                <div class="card-body">
                                                    <h5 class="card-title">
                                                        <a href="@Url.Action("Details", "Anime", new { id = anime.AnimeId })">
                                                            @anime.Title
                                                        </a>
                                                    </h5>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            }
            else
            {
                <h5 class="text-danger">Não há listas de anime para este utilizador.</h5>
            }
        </div>
    }
    else
    {
        <h5 class="text-danger">Erro ao carregar as informações do perfil.</h5>
    }
</div>
